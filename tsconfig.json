{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.ts", "*.js"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "types", "src/**/*.test.ts"]
}
